    <div class="Content_item_category categoryColor_{{category}}">{{category}}</div>
    <div class="Content_item_text">{{title}}</div>
    <div class="Content_item_star">{{{showStars rate}}}</div>
{{else}}
    <div class="Content_item_image"><img src="images/NoImage.jpg"/></div>
    <div class="Content_item_category categoryColor_{{category}}">{{category}}</div>
    <div class="Content_item_text">{{title}}</div>
    <div class="Content_item_star">{{{showStars rate}}}</div>
{{/if}}